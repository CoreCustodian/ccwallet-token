contract CoreCustodian is ERC20, Ownable {
    // Address List
    address public taxWallet = 0xDbcfF9707B03717F0C94fFd6657Aa99c45cbe240;
    uint256 public routerCount = 0;

    // Tax System
    uint256 public taxPercentage = 5;

    IUniswapV2Router02 public swapRouter;
    mapping(address => bool) public isSwapPair;
    mapping(address => bool) public isNative;

    bool private inSwap = false;

    event TransferTax(address from, address to, uint256 amount);
    event NewTaxPercentage(uint256 newPercentage);
    event NewTaxWallet(address newWallet);
    event SwapPairAdded(address pairAddress, bool isNative);
    event SwapPairRemoved(address pairAddress);

    constructor() ERC20("Core Custodian", "CCDN") {
        uint256 startSupply = 50_000_000 * 10 ** decimals();
        _mint(msg.sender, startSupply);
    }

    function initialize(address routerAddress, bool _isNative) external onlyOwner {
        IUniswapV2Router02 _uniswapRouter = IUniswapV2Router02(routerAddress);
        address pair = IUniswapV2Factory(_uniswapRouter.factory()).getPair(address(this), _uniswapRouter.WETH());
        swapRouter = _uniswapRouter;
        _approve(address(this), address(swapRouter), type(uint256).max);
        _approve(address(this), address(pair), type(uint256).max);

        isSwapPair[pair] = true;
        isNative[pair] = _isNative;
        emit SwapPairAdded(pair, _isNative);
    }

    function addSwapPair(address pair, bool _isNative) external onlyOwner {
        require(pair != address(0), "Invalid pair address");
        isSwapPair[pair] = true;
        isNative[pair] = _isNative;
        emit SwapPairAdded(pair, _isNative);
    }

    // Remove a swap pair
    function removeSwapPair(address pair) external onlyOwner {
        require(pair != address(0), "Invalid pair address");
        isSwapPair[pair] = false;
        emit SwapPairRemoved(pair);
    }

    function _transfer(address from, address to, uint256 amount) internal override {
        if (inSwap) {
            super._transfer(from, to, amount);
            return;
        }
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");

        // If selling tokens, apply the tax
        if (isSwapPair[to] && taxPercentage > 0) {
            uint256 taxTokenAmount = (amount * taxPercentage) / 100;
            uint256 remainingAmount = amount - taxTokenAmount;

            if (isNative[to]) {
                super._transfer(from, address(this), taxTokenAmount);
                swapTokensForEth(taxTokenAmount);
            }
            if (!isNative[to]) {
                super._transfer(from, taxWallet, taxTokenAmount);
            }

            super._transfer(from, to, remainingAmount);

            // Emit tax event
            emit TransferTax(from, address(this), taxTokenAmount);
        } else {
            // Perform the token transfer without tax
            super._transfer(from, to, amount);
        }
    }

    function swapTokensForEth(uint256 tokenAmount) private {
        inSwap = true;

        require(balanceOf(address(this)) >= tokenAmount, "Insufficient balance in contract");

        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = swapRouter.WETH();

        _approve(address(this), address(swapRouter), tokenAmount);

        swapRouter.swapExactTokensForETHSupportingFeeOnTransferTokens(tokenAmount, 0, path, taxWallet, block.timestamp);

        inSwap = false;
    }

    function setTaxPercentage(uint256 newPercentage) external onlyOwner {
        require(newPercentage <= 10, "Tax percentage cannot exceed 10%");
        taxPercentage = newPercentage;
        emit NewTaxPercentage(newPercentage);
    }

    function setTaxWallet(address newWallet) external onlyOwner {
        taxWallet = newWallet;
        emit NewTaxWallet(newWallet);
    }

    receive() external payable {}
}
